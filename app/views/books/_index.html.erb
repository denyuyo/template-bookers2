<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody id="book">
    <% books.each do |book| %>
      <tr id="book_<%= book.id %>">
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to book.title,book %></td>
        <td><%= book.body %></td>
        <td  id="favorites_<%= book.id %>">
       <%= render "favorites/favorite", book: book %>
        </td>
       <td class="comments-count"><i class="fa fa-comments"></i> <%= book.book_comments.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>