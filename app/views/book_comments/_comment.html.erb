<% book_comments.each do |book_comment| %>
  <tr>
    <td>
      <%= link_to user_path(book_comment.user) do %>
        <%= image_tag book_comment.user.get_profile_image, size:"80x80" %><br>
        <%= book_comment.user.name %>
      <% end %>
    </td>
    <td>
      <td><%= book_comment.content %></td>
    </td>
    <td>
      <% if book_comment.user_id == current_user.id %>
        <%= link_to "Destroy", book_book_comment_path(book_comment.book.id, book_comment.id), method: :delete, remote: true, class: "btn btn-danger pull-right" %>
      <% end %>
    </td>
  </tr>
<% end %>
